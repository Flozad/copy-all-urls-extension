{
  "name": "Umbrella - Copy All URLs",
  "version": "1.10.4",
  "manifest_version": 3,
  "description": "Save and restore browser tabs instantly. Copy URLs in multiple formats, paste to reopen tabs.",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Copy and paste browser tabs"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "options_page": "options.html",
  "commands": {
    "copy-urls": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Copy URLs from all open tabs"
    },
    "paste-urls": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Paste URLs to open them in new tabs"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
